<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowBackground"></item>
        <item name="android:textColor">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
    </style>

    <style name="RobotoCalendarMonthText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#e86363</item>
        <item name="fontPath">fonts/Cabin-Regular.ttf</item>
    </style>

    <style name="RobotoCalendarMonthArrow">
        <item name="android:tint">#e86363</item>
    </style>


    <style name="RobotoCalendarDayOfTheWeekText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#767cfc</item>
        <item name="fontPath">fonts/Cabin-Regular.ttf</item>
    </style>

    <style name="RobotoCalendarDayOfTheMonthText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#4F4F4F</item>
        <item name="fontPath">fonts/Cabin-Bold.ttf</item>
    </style>


    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@android:color/white</item>

        <item name="android:textColorAlertDialogListItem">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <!--buttons color-->
        <item name="colorAccent">@android:color/holo_red_light</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!--dialog background-->
        <item name="android:windowBackground">@drawable/background_dialog</item>

    </style>

    <style name="fontForListNextWorkouts">
        <item name="android:fontFamily">fonts/Cabin-Regular.ttf</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
